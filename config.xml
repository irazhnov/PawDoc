<?xml version='1.0' encoding='utf-8'?>
<widget id="com.clinic.pawdoc" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PawDoc</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="com.dooble.phonertc" spec="1" />
    <plugin name="com.maginsoft.mfilechooser" spec="1" />
    <plugin name="cordova-plugin-camera" spec="1" />
    <plugin name="cordova-plugin-chrome-apps-power" spec="1" />
    <plugin name="cordova-plugin-device" spec="1" />
    <plugin name="cordova-plugin-file" spec="1" />
    <plugin name="cordova-plugin-file-transfer" spec="1" />
    <plugin name="cordova-plugin-media" spec="1" />
    <plugin name="cordova-plugin-media-capture" spec="1" />
    <plugin name="cordova-plugin-statusbar" spec="1" />
    <plugin name="cordova-plugin-x-toast" spec="1" />
    <plugin name="mx.ferreyra.callnumber" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreen" value="splash" />
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="UIWebViewBounce" value="false" />
    <preference name="fullscreen" value="true" />
    <preference name="Orientation" value="portrait" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="app/images/itunesartwork@2x.png"/>
</widget>
